    <!-- <VsixOutputPath>$(ArtifactsBinDir)VSSetup/</VsixOutputPath> -->
    <!-- <VsixOutputPath>$(ArtifactsBinDir)VSSetup\$(AssemblyName)\</VsixOutputPath> -->
    <VsixOutputPath>$(WorkloadDropDirectory)Workload.VSDrop.$(AssemblyName)\</VsixOutputPath>
  </PropertyGroup>

</Project>